<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.putin.mapp.calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_marginTop="101dp"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:hint="Enter Number 1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Enter Number 2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="+"
        android:id="@+id/button19"
        android:background="@drawable/buttonshape3"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="-"
        android:id="@+id/button20"
        android:background="@drawable/buttonshape3"
        android:layout_alignTop="@+id/button19"
        android:layout_alignLeft="@+id/button23"
        android:layout_alignStart="@+id/button23" />

    <Button
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="*"
        android:id="@+id/button21"
        android:background="@drawable/buttonshape3"
        android:layout_alignTop="@+id/button20"
        android:layout_alignRight="@+id/button23"
        android:layout_alignEnd="@+id/button23" />

    <Button
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="/"
        android:id="@+id/button22"
        android:background="@drawable/buttonshape3"
        android:layout_alignTop="@+id/button21"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/button23"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonshape"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />
</RelativeLayout>
